<ul class="nav nav-tabs">
  <li class="nav-item">
    <%= link_to t(:all), locais_path, :class => "nav-link active" %>
  </li>
  <% if usuario_signed_in? %>
    <li class="nav-item">
      <%= link_to t(:new), new_local_path, :class => "nav-link" %>
    </li>
  <% end %>
</ul>

<% if @locais.empty? %>
  <br/>
  <h3>Nenhum Local Registrado</h3>
<% else %>

  <br/>
  <div style="overflow-x:auto;">
    <table id="dataTable-agroecologia" class="table table-striped table-bordered" width="100%" cellspacing="0">
      <thead>
        <tr>
          <th></th>
          <th>Nome</th>
          <th>Tipo</th>
          <th>Organização</th>
          <th>Experiências</th>
          <th>SAFs</th>
          <% if usuario_signed_in? %><th></th><% end %>
        </tr>
      </thead>

      <tbody>
        <% @locais.each do |local| %>
        <tr>
          <td scope="row"><%= link_to image_tag(local.imagem.url(:thumb), :height => "80"), local_path(local) %></td>
          <td><%= link_to local.nome, local_path(local) %></td>
          <td><%= local.tipo %></td>
          <td><%= local.organizacoes.map {|organizacao| link_to organizacao.nome, organizacao_path(organizacao)}.join(", ").html_safe %>&nbsp;
          <td><%= local.experiencia_agroecologicas.count %></td>
          <td><%= local.safs.count %></td>

          <% if usuario_signed_in? %>
            <td>
            <% if current_usuario.admin? or local.usuario.id == current_usuario.id %>
              <%= link_to t(:edit), edit_local_path(local), :class => 'btn btn-mini btn-success' %>
              <%= link_to t(:destroy), local_path(local), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Você tem Certeza?')) }, :class => 'btn btn-mini btn-danger' %>
            <% end %>
            </td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <script>$(document).ready(function(){ dataTables(); });</script>
<% end %>

