<ul class="nav nav-tabs">
  <li class="nav-item">
    <%= link_to t(:all), organizacoes_path, :class => "nav-link active" %>
  </li>
  <% if usuario_signed_in? %>
    <li class="nav-item">
      <%= link_to t(:new), new_organizacao_path, :class => "nav-link" %>
    </li>
  <% end %>
</ul>

<% if @organizacoes.empty? %>
  <br/>
  <h3>Nenhuma Organização Registrada</h3>
<% else %>

  <br/>
  <div style="overflow-x:auto;">
    <table id="dataTable-agroecologia" class="table table-striped table-bordered" width="100%" cellspacing="0">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Cidade</th>
          <th>UF</th>
          <th>Tipo</th>
          <th>Locais</th>
          <th>Experiências</th>
          <th>SAFs</th>
          <% if usuario_signed_in? %><th></th><% end %>
        </tr>
      </thead>

      <tbody>
        <% @organizacoes.each do |organizacao| %>
        <tr>
          <td><%= link_to organizacao.nome, organizacao_path(organizacao) %></td>
          <td><%= organizacao.cidade %></td>
          <td><%= organizacao.uf %></td>
          <td><%= organizacao.tipo_organizacao.nome %></td>
          <td><%= organizacao.locais.map {|local| link_to local.nome, local_path(local)}.join(", ").html_safe %>&nbsp;
          <td><%= organizacao.experiencia_agroecologicas.count %></td>
          <td><%= organizacao.safs.count %></td>

          <% if usuario_signed_in? %>
            <td>
            <% if current_usuario.admin? or organizacao.usuario.id == current_usuario.id %>
              <%= link_to t(:edit), edit_organizacao_path(organizacao), :class => 'btn btn-mini btn-success' %>
              <%= link_to t(:destroy), organizacao_path(organizacao), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Você tem Certeza?')) }, :class => 'btn btn-mini btn-danger' %>
            <% end %>
            </td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <script>$(document).ready(function(){ dataTables(); });</script>
<% end %>

