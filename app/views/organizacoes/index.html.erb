<ul class="nav nav-tabs">
  <li class="nav-item">
    <%= link_to t(:all), organizacoes_path, :class => "nav-link active" %>
  </li>
  <% if usuario_signed_in? %>
    <% if current_usuario.admin? %>
      <li class="nav-item">
        <%= link_to t(:new), new_organizacao_path, :class => "nav-link" %>
      </li>
    <% end %>
  <% end %>
</ul>

<% if @organizacoes.empty? %>
  <br/>
  <h3>Nenhum Dado Encontrado</h3>
<% else %>

<div class="tab-content">
  <div class="tab-pane active"><br/>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Nome</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @organizacoes.each do |organizacao| %>
        <tr>
          <td><%= link_to organizacao.nome, organizacao_path(organizacao) %></td>
          <td>
            <%= link_to t(:edit), edit_organizacao_path(organizacao), :class => 'btn btn-mini btn-success' %>
            <%= link_to t(:destroy), organizacao_path(organizacao), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'VocÃª tem Certeza?')) }, :class => 'btn btn-mini btn-danger' %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<% end %>
