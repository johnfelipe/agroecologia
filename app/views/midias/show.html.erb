<ul class="nav nav-tabs">
  <li class="nav-item">
    <% if params[:saf_id] %>
      <%= link_to "Todos", safs_path, :class => "nav-link" %>
    <% elsif params[:experiencia_agroecologica_id] %>
      <%= link_to "Todos", experiencia_agroecologicas_path, :class => "nav-link" %>
    <% end %>
   </li>

  <li class="nav-item">
    <% if params[:saf_id] %>
      <%= link_to @saf.nome, saf_path(@saf), :class => "nav-link" %>
    <% elsif params[:experiencia_agroecologica_id] %>
      <%= link_to @experiencia_agroecologica.nome, experiencia_agroecologica_path(@experiencia_agroecologica), :class => "nav-link" %>
    <% end %>
   </li>

  <li class="nav-item">
    <% if params[:saf_id] %>
      <%= link_to "Fotos", saf_midias_path, :class => "nav-link" %>
    <% elsif params[:experiencia_agroecologica_id] %>
      <%= link_to "Fotos", experiencia_agroecologica_midias_path, :class => "nav-link active" %>
    <% end %>
  </li>

  <li class="nav-item">
    <% if params[:saf_id] %>
      <%= link_to @midia.descricao, saf_midia_path(@saf, @midia.id), :class => "nav-link active" %>
    <% elsif params[:experiencia_agroecologica_id] %>
      <%= link_to @midia.descricao, experiencia_agroecologica_saf_midia_path(@experiencia_agroecologia, @midia.id), :class => "nav-link active" %>
    <% end %>
  </li>
</ul>



<br/>

<div class="tab-content" style="min-height: 64px;">
  <div class="tab-pane active">
    <center>
      <%= image_tag(@midia.imagem.url(:medium), :width => "250") %>

      <br/><br/>
      <h3><%= @midia.descricao %></h3>
    </center>
    </div>
</div>

<% if usuario_signed_in? %>
<br/><br/>

  <% if current_usuario.admin? or current_usuario.id == @midia.usuario.id %>        
    <div class="form-actions">
      <% if current_usuario.admin? or @midia.usuario.id == current_usuario.id %>
        <% if params[:saf_id] %>
          <%= link_to t(:edit), edit_saf_midia_path(@saf, @midia), :class => 'btn btn-mini btn-success' %>
          <%= link_to t(:destroy), saf_midia_path(@saf, @midia), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Você tem Certeza?')) }, :class => 'btn btn-mini btn-danger' %>
        <% elsif params[:experiencia_agroecologica_id] %>
          <%= link_to t(:edit), edit_experiencia_agroecologica_midia_path(@experiencia_agroecologica, @midia), :class => 'btn btn-mini btn-success' %>
          <%= link_to t(:destroy), experiencia_agroecologicamidia_path(@experiencia_agroecologica, @midia), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Você tem Certeza?')) }, :class => 'btn btn-mini btn-danger' %>
        <% end %>
      <% end %>
    </div>
  <% end %>
<% end %>
