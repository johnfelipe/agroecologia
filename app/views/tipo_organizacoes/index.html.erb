<ul class="nav nav-tabs">
  <li class="nav-item">
    <%= link_to t(:all), tipo_organizacoes_path, :class => "nav-link active" %>
  </li>
  <% if usuario_signed_in? %>
    <% if current_usuario.admin? %>
      <li class="nav-item">
        <%= link_to t(:new), new_tipo_organizacao_path, :class => "nav-link" %>
      </li>
    <% end %>
  <% end %>
</ul>

<% if @tipo_organizacoes.empty? %>
  <br/>
  <h3>Nenhum Tipo de Organização Registrado</h3>
<% else %>

  <br/>
  <div style="overflow-x:auto;">
    <table id="dataTable-agroecologia" class="table table-striped table-bordered" width="100%" cellspacing="0">
      <thead>
        <tr>
          <th>Nome</th>
          <% if usuario_signed_in? %><th></th><% end %>
        </tr>
      </thead>

      <tbody>
        <% @tipo_organizacoes.each do |tipo_organizacao| %>
        <tr>
          <td><%= link_to tipo_organizacao.nome, tipo_organizacao_path(tipo_organizacao) %></td>
          <% if usuario_signed_in? %>
            <% if current_usuario.admin? %>
              <td>
                <%= link_to t(:edit), edit_tipo_organizacao_path(tipo_organizacao), :class => 'btn btn-mini btn-success' %>
                <%= link_to t(:destroy), tipo_organizacao_path(tipo_organizacao), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Você tem Certeza?')) }, :class => 'btn btn-mini btn-danger' %>
              </td>
            <% end %>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>

<script>$(document).ready(function(){ dataTables(); });</script>
