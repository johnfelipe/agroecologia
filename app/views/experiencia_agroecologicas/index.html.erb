<%= link_to "Registrar Nova Experiência", new_experiencia_agroecologica_path, :class => "btn btn-primary", :style => "float:right;" %>
<br/><br/><br/>

<ul class="nav nav-tabs">
  <li class="nav-item">
    <%= link_to "Listar Experiências", experiencia_agroecologicas_path, :class => "nav-link active" %>
  </li>
  <li class="nav-item">
    <%= link_to "Registrar Experiência", new_experiencia_agroecologica_path, :class => "nav-link" %>
  </li>
</ul>

<% if @experiencia_agroecologicas.empty? %>
  <br/>
  <h3>Nenhuma Experiência em Agroecologia Registrada</h3>
<% else %>

  <br/>
  <div style="overflow-x:auto;">
    <table id="dataTable-agroecologia" class="table table-striped table-bordered" width="100%" cellspacing="0">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Tema</th>
          <th>Local</th>
          <th>Fotos</th>
          <% if usuario_signed_in? %><th></th><% end %>
        </tr>
      </thead>

      <tbody>
        <% @experiencia_agroecologicas.each do |experiencia_agroecologica| %>
        <tr>
          <td><%= link_to experiencia_agroecologica.nome, experiencia_agroecologica_path(experiencia_agroecologica) %></td>
          <td><%= experiencia_agroecologica.tema_experiencia_agroecologica.nome %></td>
          <td><%= link_to experiencia_agroecologica.local.nome, local_path(experiencia_agroecologica.local) %></td>
          <td><%= link_to experiencia_agroecologica.midias.count, experiencia_agroecologica_midias_path(experiencia_agroecologica) %></td>
          <% if usuario_signed_in? %>
            <td>
              <% if current_usuario.admin? or experiencia_agroecologica.usuario.id == current_usuario.id %>
                <%= link_to t(:edit), edit_experiencia_agroecologica_path(experiencia_agroecologica), :class => 'btn btn-mini btn-success' %>
                <%= link_to t(:destroy), experiencia_agroecologica_path(experiencia_agroecologica), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Você tem Certeza?')) }, :class => 'btn btn-mini btn-danger' %>
              <% end %>
            </td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <script>$(document).ready(function(){ dataTables(); });</script>
<% end %>
